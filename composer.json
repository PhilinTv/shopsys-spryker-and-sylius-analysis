{
    "name": "tomasvotruba/shopsys-analysis",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "phploc/phploc": "^4.0",
        "sebastian/phpcpd": "^3.0",
        "symfony/console": "^3.4",
        "symfony/finder": "^3.4",
        "symfony/dependency-injection": "^3.4",
        "symfony/http-kernel": "^3.4",
        "symplify/package-builder": "^4.5",
        "symplify/easy-coding-standard": "^4.5",
        "phpstan/phpstan": "^0.10.2",
        "nette/robot-loader": "^3.0",
        "nette/utils": "^2.4"
    },
    "require-dev": {
        "tracy/tracy": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\ShopsysAnalysis\\": "src"
        }
    },
    "scripts": {
        "ecs-basic-shopsys": "vendor/bin/ecs check project/shopsys/src project/shopsys/vendor/shopsys --config ecs-clean-code.yml",
        "ecs-basic-spryker": "vendor/bin/ecs check project/spryker/vendor/spryker --config ecs-clean-code.yml",
        "ecs-basic-sylius": "vendor/bin/ecs check project/sylius/src --config ecs-clean-code.yml",
        "ecs-psr2-shopsys": "vendor/bin/ecs check project/shopsys/src project/shopsys/vendor/shopsys --config ecs-psr2.yml",
        "ecs-psr2-spryker": "vendor/bin/ecs check project/spryker/vendor/spryker --config ecs-psr2.yml",
        "ecs-psr2-sylius": "vendor/bin/ecs check project/sylius/src --config ecs-psr2.yml",
        "download-projects": [
            "@download-shopsys",
            "@download-sylius",
            "@download-spryker"
        ],
        "download-shopsys": [
            "git clone https://github.com/shopsys/shopsys.git --depth 1 --single-branch --branch v7.0.0-alpha3 project/shopsys",
            "composer install --working-dir project/shopsys"
        ],
        "download-sylius": [
            "git clone https://github.com/Sylius/Sylius.git --depth 1 --single-branch --branch v1.2.4 project/sylius"
        ],
        "download-spryker": [
            "git clone https://github.com/spryker/demoshop --depth 1 --single-branch --branch 2.32 project/spryker",
            "composer install --working-dir project/spryker"
        ],
        "check-cs": "vendor/bin/ecs check bin src",
        "fix-cs": "vendor/bin/ecs check bin src --fix"
    }
}
